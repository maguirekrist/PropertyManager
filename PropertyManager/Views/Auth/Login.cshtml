@{    
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
    @model LoginViewModel
}
<h1>Login</h1>
<p>
    Don't have an account? <a href="/Auth/register">Register</a>
</p>
@if (!string.IsNullOrEmpty(error))
{
    <h5 class="alert alert-danger">@error</h5>
}
<form asp-controller="Auth" asp-action="login" asp-route-returnurl="@returnUrl" method="post">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger text-sm"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger text-sm"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>